<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="750dp"
    android:id="@+id/modifyFrag">




    <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/timePickerCard"
        android:layout_width="375dp"
        android:layout_height="290dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="WHAT TIME SHOULD YOU BE AT WORK"
                android:textColor="@color/assistantCard"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.498" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="630dp"
                android:layout_height="350dp"
                android:scaleY="0.7"
                android:scaleX="0.7"
                android:numbersTextColor="@color/assistantCard"
                android:numbersBackgroundColor="@color/colorPrimary"
                android:numbersSelectorColor="@color/colorPrimaryDark"
                android:headerBackground="@color/assistantCard"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintVertical_bias="0.25" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/repeatCard"
        android:layout_width="375dp"
        android:layout_height="90dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="REPEAT"
                android:textColor="@color/assistantCard"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.498" />

            <ToggleButton
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:textOn="SUN"
                android:textOff="SUN"
                android:textStyle="bold"
                android:id="@+id/suntoggle"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintRight_toLeftOf="@+id/montoggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.857"
                android:layout_marginTop="8dp" />

            <ToggleButton
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:id="@+id/montoggle"
                android:textOn="MON"
                android:textOff="MON"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_bias="0.857"
                app:layout_constraintRight_toLeftOf="@+id/tuetoggle"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp" />

            <ToggleButton
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:id="@+id/tuetoggle"
                android:textOn="TUE"
                android:textOff="TUE"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintRight_toLeftOf="@+id/wedtoggle"
                android:layout_marginRight="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="37dp" />

            <ToggleButton
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:id="@+id/wedtoggle"
                android:textOn="WED"
                android:textOff="WED"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:textOn="THU"
                android:textOff="THU"
                android:id="@+id/thutoggle"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintLeft_toRightOf="@+id/wedtoggle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="37dp" />
            <ToggleButton
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:textOn="FRI"
                android:textOff="FRI"
                android:id="@+id/fritoggle"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintLeft_toRightOf="@+id/thutoggle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="37dp" />

            <ToggleButton
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:textOn="SAT"
                android:textOff="SAT"
                android:id="@+id/sattoggle"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintLeft_toRightOf="@+id/fritoggle" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/delayCard"
        android:layout_width="375dp"
        android:layout_height="130dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="DELAY"
                android:textColor="@color/assistantCard"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.498" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/assistantCard"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:text="TIME TO GET READY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.0" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="+5"
                android:textOff="+5"
                android:id="@+id/fiveone"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                android:layout_marginLeft="-1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="72dp" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="+10"
                android:textOff="+10"
                android:textStyle="bold"
                android:id="@+id/tenone"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/fiveone"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="72dp" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="+15"
                android:textOff="+15"
                android:id="@+id/fifteenone"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintLeft_toRightOf="@+id/tenone"
                android:layout_marginLeft="9dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="72dp" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="+30"
                android:textOff="+30"
                android:id="@+id/thirtyone"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="72dp"
                android:layout_marginRight="-4dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/fifteenone"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.2" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/weatherSetCard"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="WEATHER LOCATION"
                android:textColor="@color/assistantCard"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.498" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="HOME"
                android:textOff="HOME"
                android:id="@+id/weatherhome"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="24sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                android:layout_marginLeft="22dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="45dp"
                app:layout_constraintRight_toLeftOf="@+id/weatherwork"
                android:layout_marginRight="8dp" />


            54

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="WORK"
                android:textOff="WORK"
                android:id="@+id/weatherwork"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="24sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="45dp" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="ENROUTE"
                android:textOff="ENROUTE"
                android:id="@+id/weatherenroute"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="24sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/clickabletext"
                android:stateListAnimator="@null"
                android:layout_marginRight="-6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/weatherwork"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="45dp"
                app:layout_constraintHorizontal_bias="0.16" />


            54

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>